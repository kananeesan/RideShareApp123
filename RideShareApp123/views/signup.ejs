<!-- views/signup.ejs -->
<% include layout %>
<div class="container">

  <div class="col-sm-6 col-sm-offset-3">

    <div class="myHeader">
      <h1>
        <span class="fa fa-sign-in"></span> Register
      </h1>
    </div>

    <div class= "myBody">
      <!-- LOGIN FORM -->
      <div id="quotescointainer">
        <img src="../../images/add_picture.png" class="center"/>
      </div>
      <div>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
		      <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>
        &nbsp;
      </div>
      <div class="row centered-form">
        <div >
          <div class="panel panel-default">
            <div class="panel-body">
              <form action="/signup" method="post">
                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <input type="text" name="fname" id="fname" class="form-control input-sm floatlabel" placeholder="First Name">
			    					</div>
                  </div>
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <input type="text" name="lname" id="lname" class="form-control input-sm" placeholder="Last Name">
			    					</div>
                  </div>
                </div>

                <div class="form-group">
                  <input type="text" name="username" id="username" class="form-control input-sm" placeholder="User Name">
			    			</div>

                <div class="form-group">
                  <input type="email" name="email" id="email" class="form-control input-sm" placeholder="E-mail">
			    			</div>

                <div class="form-group">
                  <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
			    			</div>


                <input type="submit" value="Create" class="btn btn-info btn-block">
			    		
			    		</form>


            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>
